<div class="row theme-overview">
	<form class="col s12 m3 sidebar">
		<label>Sort Byâ€¦</label>
		{{view "select"
			contentBinding="this.sortByKeys"
			selectionBinding="this.sortBy"}}

		<div class="input-field">
			{{input type="number" id="length" min="2" max="16" value=this.lengthOfStay}}
			<label for="length">Length of Stay</label>
